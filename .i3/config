# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
set $unit 5
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will shrink the window’s height.
# Pressing down will grow the window’s height.
		bindsym h resize shrink width $unit px or $unit ppt
		bindsym k resize grow height $unit px or $unit ppt
		bindsym j resize shrink height $unit px or $unit ppt
		bindsym l resize grow width $unit px or $unit ppt

# same bindings, but for the arrow keys
		bindsym Left resize shrink width $unit px or $unit ppt
		bindsym Up resize grow height $unit px or $unit ppt
		bindsym Down resize shrink height $unit px or $unit ppt
		bindsym Right resize grow width $unit px or $unit ppt

# back to normal: Enter or Escape
		bindsym Return mode "default"
		bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
	#status_command i3blocks -c ~/.i3/i3blocks.conf
	status_command i3status
	colors {
			background #2B303B
			statusline #ffffff
			separator #666666

			focused_workspace  #a2b8b6 #71807f #ffffff
			active_workspace   #71807f #566260 #ffffff
			inactive_workspace #2E3030 #2E3030 #aaaaaa
			urgent_workspace   #e64949 #c44949 #ffffff
	}
}
# Pulse Audio controls
set $volumeUnit 5
bindsym XF86AudioRaiseVolume exec amixer -q sset Master $volumeUnit+ #increase sound volume
bindsym XF86AudioLowerVolume exec amixer -q sset Master $volumeUnit- #decrease sound volume
bindsym XF86AudioMute exec amixer -q sset Master toggle # mute sound

# Screen brightness controls
set $brightnessUnit 10 
bindsym XF86MonBrightnessUp exec xbacklight -inc $brightnessUnit # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec $brightnessUnit # decrease screen brightness

# Startup Scripts

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

